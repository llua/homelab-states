#autoload
local -Ua _machines type
local typeverb=list

zparseopts -D -E -a type t+:
[[ -n $type[(r)i] ]] && typeverb=list-images

_machines=(${${(f)"$(_call_program systemd-machines machinectl --full --no-legend --no-pager $typeverb)"}%% *})
if (( $#_machines )); then
        _describe 'machines' _machines
else
        _message 'no machines'
fi
