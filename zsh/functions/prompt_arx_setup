prompt_arx_help() {
  cat <<\eof
justdoit(tm)
eof
}

prompt_arx_setup() {
  local localhost
  zstyle -a ':prompt:arx:' hosts localhost

  if (( UID == 0 )); then
    PROMPT="%F{6}%m %F{208}%B::%f%b "
  else
    if (( localhost[(I)$HOST] )) && ! (( $#parameters[(I)SSH_(CLIENT|TTY|CONNECTION)] )); then
      PROMPT="%F{14}%B::%b%f "
    else
      PROMPT='%F{6}%m%f %F{14}%B::%b%f '
    fi
  fi

  RPROMPT="%B%F{6}%~%f%b"
}

prompt_arx_setup "$@"
